n=int(input('no.of rows and columns in matrix'))
N=[]
s=0
g=0
f=0
for i in range(0,n):
      p=[]
      print('enter elements in ',i+1,'row')
      for q in range(0,n):
            x=int(input())
            p.append(x)
      N.append(p)
for k in range(0,n):
      g=g+N[f][s]
      f+=1
      s+=1
print('sum of left diagonal of the matrix is ',g)
g=0
f=0
for k in range(0,n):
      g=g+N[f][s-1]
      f+=1
      s-=1
print('sum of right diagonal of the matrix is ',g)
